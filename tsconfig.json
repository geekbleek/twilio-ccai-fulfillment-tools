{
	"compilerOptions": {
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"strict": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"outDir": "./lib",
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"lib": ["dom", "esnext"],
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "./src/**/*.test.*"]
}
